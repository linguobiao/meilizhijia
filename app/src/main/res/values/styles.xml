<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="new_circle_progress" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <dimen name="app_wxtst">17dp</dimen>

    <!-- 自定义对话框样式__带暗色背景 -->
    <style name="dialog_with_alpha" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!-- 分享对话框进出场动画 -->
    <style name="popupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/operate_controler_open</item>
        <item name="android:windowExitAnimation">@anim/operate_controler_close</item>
    </style>
</resources>